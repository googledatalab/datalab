FROM debian:jessie

# Setup base packages
RUN echo "deb-src http://ftp.us.debian.org/debian testing main" >> /etc/apt/sources.list && \
    apt-get update -y && \
    apt-get install --no-install-recommends -y -q \
        curl git wget unzip vim pandoc ca-certificates build-essential \
        libpng-dev libfreetype6-dev && \
    mkdir -p /packages && \
    mkdir -p /tools && \
    mkdir -p /env/python && \
    mkdir -p /env/static && \
    cd /packages && apt-get source -d python-zmq && cd /


# Setup Nodejs
RUN mkdir /node && curl http://nodejs.org/dist/v0.10.32/node-v0.10.32-linux-x64.tar.gz | \
    tar xvzf - -C /node --strip-components=1


# Setup Python and Python Libraries
RUN apt-get install --no-install-recommends -y -q \
    python2.7 python-pip python-dev python-pandocfilters \
    python-zmq python-tornado python-jinja2 \
    python-numpy python-pandas \
    python-statsmodels python-patsy python-sklearn python-scipy python-sympy \
    python-matplotlib \
    python-oauth2client python-httplib2
RUN pip install -U pip && \
    pip install -U tornado jinja2 pandocfilters && \
    pip install -U numpy pandas statsmodels patsy scikit-learn scipy sympy && \
    pip install -U matplotlib ggplot && \
    pip install -U oauth2client httplib2 && \
    pip install -U ipython==2.2.0


# Setup Google Cloud SDK
RUN wget https://dl.google.com/dl/cloudsdk/release/google-cloud-sdk.zip && \
    unzip google-cloud-sdk.zip -d tools && \
    rm google-cloud-sdk.zip
RUN /tools/google-cloud-sdk/install.sh --usage-reporting=false --path-update=true \
        --bash-completion=true --rc-path=/.bashrc --disable-installation-options && \
    /tools/google-cloud-sdk/bin/gcloud -q components update


# Add License file
ADD License.txt /License.txt


# Setup Environment
ENV PATH $PATH:/node/bin:/tools:/tools/google-cloud-sdk/bin
ENV IPYTHON_VERSION _version_
ENV IPYTHON_ENV cloud
ENV DATALAB_ENV docker
ENV PYTHONPATH /env/python


# Add SDK Libraries
ADD build/python/PyGCP-0.1.0.tar.gz /sdk/
ADD build/python/IPythonGCP-0.1.0.tar.gz /sdk/

RUN cd /sdk/PyGCP-0.1.0 && python setup.py install && \
    cd /sdk/IPythonGCP-0.1.0 && python setup.py install


# Setup IPython Profile and Proxy Server
ADD build/ipython.tar.gz /
RUN cd /ipython/proxy && npm install && cd /


# Startup
EXPOSE 8080
VOLUME [ "/var/log/ipython" ]
ENTRYPOINT [ "node", "/ipython/proxy/app.js" ]
